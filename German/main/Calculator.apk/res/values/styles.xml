    </style>
    <style name="button_simple_fun_key_style" parent="@style/button_style">
        <item name="android:background">@drawable/btn_simple_pad_fun_key</item>
        <item name="android:layout_marginLeft">6.0dip</item>
    </style>
    <style name="simple_pad_button_equal_style" parent="@style/button_style">
        <item name="android:background">@drawable/btn_simple_pad_equal_key</item>
        <item name="android:layout_marginLeft">6.0dip</item>
    </style>
    <style name="simple_pad_button_digit0_style" parent="@style/button_style">
        <item name="android:background">@drawable/btn_simple_pad_digit0_key</item>
        <item name="android:layout_marginLeft">6.0dip</item>
