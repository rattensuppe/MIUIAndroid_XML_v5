<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_activity" parent="@miui:style/V5.Theme.Light.NoTitle">
        <item name="android:windowBackground">@drawable/calculator_background</item>
    </style>
    <style name="button_style">
        <item name="android:textSize">@dimen/btn_digit_text_size</item>
        <item name="android:textColor">#df58626c</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:shadowColor">#dfffffff</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>
    <style name="out_screen_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/btn_scientific_pad_fun_key</item>
    </style>
    <style name="button_scientific_pad_digit_key_style" parent="@style/button_style">
        <item name="android:textSize">@dimen/btn_scientific_text_size</item>
        <item name="android:background">@drawable/btn_scientific_pad_digit_key</item>
    </style>
    <style name="button_scientific_pad_fun_key_style" parent="@style/button_style">
        <item name="android:textSize">@dimen/btn_scientific_text_size</item>
        <item name="android:background">@drawable/btn_scientific_pad_fun_key</item>
    </style>
    <style name="button_scientific_pad_equal_key_style" parent="@style/button_style">
        <item name="android:textSize">@dimen/btn_digit_text_size</item>
        <item name="android:background">@drawable/btn_scientific_pad_equal_key</item>
    </style>
    <style name="button_simple_digit_key_style" parent="@style/button_style">
        <item name="android:background">@drawable/btn_simple_digit_key</item>
