        <item name="android:textSize">@dimen/history_text_size</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/show_screen_text_color</item>
        <item name="android:gravity">right|center</item>
        <item name="android:paddingTop">30.0dip</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
</resources>
