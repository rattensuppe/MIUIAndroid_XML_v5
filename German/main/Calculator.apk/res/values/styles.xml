    <style name="button_simple_equal_style" parent="@style/button_style">
        <item name="android:background">@drawable/btn_simple_pad_equal_key</item>
        <item name="android:layout_marginLeft">6.0dip</item>
    </style>
    <style name="display_style">
        <item name="android:textSize">@dimen/display_text_size</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/show_screen_text_color</item>
        <item name="android:gravity">bottom|right|center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">@dimen/display_textview_padding_horizontal</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">@dimen/display_textview_padding_horizontal</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <style name="btn_row_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="style_text_on_btn">
        <item name="android:layout_gravity">bottom|right|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#dfffffff</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="equal_simple_style_text_on_btn" parent="@style/style_text_on_btn">
        <item name="android:textSize">@dimen/simple_btn_text_size</item>
        <item name="android:textColor">@color/equal_button_text</item>
        <item name="android:layout_marginRight">18.0dip</item>
        <item name="android:layout_marginBottom">19.0dip</item>
    </style>
